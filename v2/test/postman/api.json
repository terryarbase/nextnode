{
	"info": {
		"_postman_id": "1d98c21f-651f-417e-8400-bc0b01b89514",
		"name": "NextNode V2 API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "user",
			"item": [
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "b78519f2-43a1-409e-b54c-13b803fa20ed",
								"exec": [
									"var jsondata = pm.response.json();",
									"if (jsondata.data.sessionToken) {",
									"    pm.environment.set(\"loginToken\", jsondata.data.sessionToken);",
									"}",
									"if (jsondata.data.refreshToken) {",
									"    pm.environment.set(\"refreshToken\", jsondata.data.refreshToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "email",
									"value": "{{email}}",
									"type": "text"
								},
								{
									"key": "password",
									"value": "{{password}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{host}}{{api}}signin",
							"host": [
								"{{host}}{{api}}signin"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get User Profile",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "b78519f2-43a1-409e-b54c-13b803fa20ed",
								"exec": [
									"var jsondata = pm.response.json();",
									"if (jsondata.status === true) {",
									"    if (jsondata.data.sessionToken) {",
									"        pm.environment.set(\"loginToken\", jsondata.data.sessionToken);",
									"    }",
									"    if (jsondata.data.refreshToken) {",
									"        pm.environment.set(\"refreshToken\", jsondata.data.refreshToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"protocolProfileBehavior": {
						"disableBodyPruning": true
					},
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{loginToken}}",
								"type": "text"
							}
						],
						"body": {},
						"url": {
							"raw": "{{host}}{{api}}session/profile",
							"host": [
								"{{host}}{{api}}session"
							],
							"path": [
								"profile"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "App Info",
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{loginToken}}",
						"type": "text",
						"disabled": true
					}
				],
				"body": {},
				"url": {
					"raw": "{{host}}{{api}}info",
					"host": [
						"{{host}}{{api}}info"
					]
				}
			},
			"response": []
		}
	]
}